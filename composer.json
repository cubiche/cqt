{
    "name": "jadddp/code-quality-tools",
    "type": "library",
    "description": "A PHP code quality tools.",
    "keywords": ["quality", "code", "php-cs-fixer", "phpcs", "phpmd", "phpunit", "git hook"],
    "license": "MIT",
    "authors": [
        {
            "name": "Karel Osorio",
            "email": "osorioramirez@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "squizlabs/php_codesniffer": "@stable",
        "fabpot/php-cs-fixer": "@stable",
        "phpmd/phpmd" : "@stable",
        "phpunit/phpunit": "~4.2"
    },
    "autoload": {
        "psr-0": { "CodeQualityTool": "" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "bin": [
        "pre-commit"
    ],
    "scripts": {
        "post-install-cmd": [
            "CodeQualityTool::checkHooks",
            "chmod +x pre-commit"
        ],
        "post-update-cmd": [
            "CodeQualityTool::checkHooks",
            "chmod +x pre-commit"
        ]
    }
}
